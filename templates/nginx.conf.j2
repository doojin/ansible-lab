upstream app {
    {% for host in groups['app'] %}
    server {{ host }};
    {% endfor %}
}

server {
    listen       80;
    server_name  localhost;

    location / {
        proxy_pass http://app;
    }

    # Healthcheck endpoint
    location /ping {
        access_log off;
        add_header 'Content-Type', 'application/json';
        return 200 '{ "ok": true }';
    }
}